{
  "expo": {
    "name": "Quotidis",
    "slug": "activus",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/fittracker-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/fittracker-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mkbuildp.fittracker",
      "buildNumber": "20",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMotionUsageDescription": "Aplikace potřebuje přístup k pohybovým datům pro zobrazení počtu kroků."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/fittracker-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.mkbuildp.fittracker",
      "versionCode": 20,
      "minSdkVersion": 26,
      
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.ACTIVITY_RECOGNITION"
      ],
      "blockedPermissions": [
        "com.google.android.gms.permission.AD_ID"
      ],
      "allowBackup": false,
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.mkbuildp.fittracker"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-localization",
      [
        "expo-notifications",
        {
          "icon": "./assets/fittracker-icon.png",
          "color": "#2563eb"
        }
      ],
      [
        "react-native-edge-to-edge",
        {
          "android": {
            "parentTheme": "Default",
            "enforceNavigationBarContrast": false
          }
        }
      ],
      "./app.plugin.js"
    ],
    "extra": {
      "eas": {
        "projectId": "88eb49c7-71c5-4b7b-bfb9-7001738bbd3b"
      }
    },
    "owner": "mkbuild"
  }
}
